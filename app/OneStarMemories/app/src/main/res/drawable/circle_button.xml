<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">


            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <gradient android:angle="270" android:endColor="#cdcdcd" android:startColor="#00ff0000" />
            <stroke
                android:width="3dp"
                android:color="#91aa9d" />
            <corners android:bottomLeftRadius="50dp" android:bottomRightRadius="50dp" android:topLeftRadius="50dp" android:topRightRadius="50dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#00ff0000" />
            <corners android:bottomLeftRadius="50dp" android:bottomRightRadius="50dp" android:topLeftRadius="50dp" android:topRightRadius="50dp" />
            <stroke
                android:width="3dp"
                android:color="#91aa9d" />
        </shape>
    </item>
</selector>
