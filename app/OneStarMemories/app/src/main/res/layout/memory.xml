<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:background="@drawable/circle_edit_text"
                    android:id="@+id/text_memory1"
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:layout_height="40dp" />

                <Button
                    android:layout_marginLeft="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_memory_star"
                    android:id="@+id/star_button_memory"
                    android:layout_toRightOf="@id/text_memory1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="467"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/star_button_memory"/>

            </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:background="@drawable/circle_edit_text"
                        android:layout_centerInParent="true"
                        android:layout_width="250dp"
                        android:layout_height="40dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/entry_button"
                        android:background="@drawable/circle_edit_text"
                        android:textColor="#3e606f"
                        android:layout_width="320dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>